<%= button_to 'Get newest articles', fetch_articles_path %>
<%= form_with url: "/articles", method: :get do |form| %>
  <%= form.label :query, "Search title for:" %>
  <%= form.text_field :query, value: params[:query] %>
  <%= form.label :source, 'Choose news source' %>
  <%= form.select :source, ['', 'Cultura', 'Desenvolvimento Social'], selected: params[:source] %>
  <%= form.submit "Search" %>
<% end %>

<ul>
  <%= render @articles %>
</ul>
<%== pagy_nav(@pagy) %>
